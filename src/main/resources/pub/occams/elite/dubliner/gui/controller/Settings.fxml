<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="view" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pub.occams.elite.dubliner.gui.controller.SettingsController">
   <children>
      <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab closable="false" text="Resolutions">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="resolutionCombo" prefWidth="150.0" />
                        <TableView fx:id="segmentsTable" editable="true" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="segmentColumn" editable="false" minWidth="130.0" prefWidth="130.0" text="Segment" />
                            <TableColumn prefWidth="75.0" text="x" fx:id="xCoordColumn" />
                              <TableColumn fx:id="yColumn" prefWidth="75.0" text="y" />
                              <TableColumn fx:id="widthColumn" prefWidth="75.0" text="width" />
                              <TableColumn fx:id="heightColumn" prefWidth="75.0" text="height" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT">
                           <children>
                              <Button mnemonicParsing="false" onAction="#applyResolutions" prefHeight="35.0" prefWidth="96.0" text="Apply" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="Corrections">
               <content>
                  <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
                     <children>
                        <TableView fx:id="correctionsTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="fromColumn" prefWidth="75.0" text="From" />
                            <TableColumn fx:id="toColumn" prefWidth="75.0" text="To" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT">
                           <children>
                              <Button mnemonicParsing="false" onAction="#applyCorrections" prefHeight="35.0" prefWidth="96.0" text="Apply" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</Pane>
